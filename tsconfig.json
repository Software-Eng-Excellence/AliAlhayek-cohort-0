{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "dist", // all the compiled files will be placed in this folder and this will use to be run the application on the server.
        "strict": true,
        "types": ["node"],
        "baseUrl": "./src",
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}